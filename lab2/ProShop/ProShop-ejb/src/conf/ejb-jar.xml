            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>HistoryBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <message-destination>
            <display-name>Destination for NewMessageBeanMDB</display-name>
            <message-destination-name>jms/HistoryQueue</message-destination-name>
        </message-destination>
        </assembly-descriptor>
</ejb-jar>
