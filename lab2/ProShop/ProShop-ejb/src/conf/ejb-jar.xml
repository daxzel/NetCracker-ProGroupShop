        <entity>
            <display-name>OrderBeanEB</display-name>
            <ejb-name>OrderBean</ejb-name>
            <home>entityBeans.OrderBeanRemoteHome</home>
            <remote>entityBeans.OrderBeanRemote</remote>
            <local-home>entityBeans.OrderBeanLocalHome</local-home>
            <local>entityBeans.OrderBeanLocal</local>
            <ejb-class>entityBeans.OrderBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.Long</prim-key-class>
